{{#if user}}
  <div id="logout">
    <a href="/logout">Logout</a>
  </div>

  <div class="text-center" id="sat-selection-section">
    <label for="sat-selection">Select a section</label>
      <select id="section-selection">
        <option value="mathCalc">Math with Calc</option>
        <option value="mathNoCalc">Math without Calc</option>
        <option value="reading">Reading</option>
        <option value="writing">Writing</option>
      </select>
      <button id="start-button">Start</button>
  </div>
  <div id="quiz">
    <div id="section-intro">
      <div id="directions"></div>
    </div>
    <div class="row">
      <div class="col-md-8">
        <div id="content">
          <div id="section-content"></div>
        </div>
      </div>
      <div class="col-md-4">
      <div id="questions">
        <div id="section-questions"></div>
      </div>
      </div>
    </div>
  </div>

{{else}}

  <div class="signin text-center">
    <div id="local">
      <a data-toggle="collapse" href="#local-sign-in" class="btn btn-default btn-md" role="button">Sign In</a>
      <a data-toggle="collapse" href="#local-reg" class="btn btn-default btn-md" role="button">Register</a>
    </div>

    {{#if message}}
      <div class="alert alert-danger">{{message}}</div>
    {{/if}}

    <form id="local-sign-in" class="collapse" action="/login" method="post">
      <label>Email:</label>
      <input type="text" name="email"/>
      <label>Password:</label>
      <input type="password" name="password"/>
      <input type="submit" class="btn btn-primary btn-sm"/>
    </form>

    <form id="local-reg" class="collapse" action="/signup" method="post">
      <label>New Username:</label>
      <input type="text" name="email"/>
      <label>New Password:</label>
      <input type="password" name="password"/>
      <input type="submit" class="btn btn-primary btn-sm"/>
    </form>
  </div>

{{/if}}